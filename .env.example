# PostgreSQL (schema is set to postgresql in prisma/schema.prisma):
# DATABASE_URL="postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=public"
# Local example: postgresql://postgres:postgres@localhost:5432/pililokal?schema=public
# Hosted (Supabase/Neon/Railway): use the connection string from your provider
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/pililokal?schema=public"

# NextAuth (required for login + Google OAuth). Generate: openssl rand -base64 32
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-32-char-secret-here-change-in-production"

# Google OAuth (optional; leave empty to hide "Sign in with Google")
# GOOGLE_CLIENT_ID=""
# GOOGLE_CLIENT_SECRET=""

# Resend (optional; invite emails when creating users). Get key at resend.com
# RESEND_API_KEY="re_xxxx"
# FROM_EMAIL="onboarding@resend.dev"
# APP_NAME="Pililokal Dashboard"
